@model IEnumerable<Rental4You.Models.Empresa>

@{
    ViewData["Title"] = "Empresas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Empresas</h1>

<div class="col-10">
    <div class="col-2">
        <a asp-action="Index" asp-route-estado="">Todos</a> |
        <a asp-action="Index" asp-route-estado="true">Activos</a> |
        <a asp-action="Index" asp-route-estado="false">Inactivos</a>
    </div> <br />
</div>

@using (Html.BeginForm("Index", "Empresas", FormMethod.Post))
{
    <div class="form-inline d-flex ">

        <input type="text" name="TextoAPesquisar"
           id="TextoAPesquisar" placeholder="texto a procurar"
           class="form-control form-control-sm" />

        <button type="submit"
            class="btn btn-default ms-2 me-2">
            <svg bootstrap-icon="Search"
             class="text-warning" width="24" height="24"
             aria-label="Search"></svg>
        </button>
    </div>
}

<p>
    <a asp-action="Create">Adicionar Empresa</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstadoSubscricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Avalicao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstadoSubscricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Avalicao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
