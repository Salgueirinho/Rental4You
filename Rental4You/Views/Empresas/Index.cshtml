@model IEnumerable<Rental4You.Models.Empresa>

@{
    ViewData["Title"] = "Empresas";
    Layout = "~/Views/Shared/_Layout_2.cshtml";
}

<h1>Empresas</h1>

@using (Html.BeginForm("Index", "Empresas", FormMethod.Get))
{
    <input type="text" name="NomeEmpresa"
       id="TextoAPesquisar" placeholder="Empresa a procurar"
       class="form-control form-control-sm" />

    <div class="form-inline d-flex mt-2">
        <div class="form-group">
            <label name="Estado" class="control-label">Estado</label>
            <select name="Estado" class="form-select" asp-items="ViewBag.Estados"></select>
        </div>

        <button type="submit"
            class="btn btn-primary ms-2 me-2 mt-4">
            Filtrar
        </button>
    </div>
}

<p>
    <a class="btn btn-primary mt-4" asp-action="Create">Adicionar Empresa</a>
</p>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstadoSubscricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Avalicao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstadoSubscricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Avalicao)
            </td>
            <td class="col-lg-3 text-center">
                <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id">Edit</a> 
                <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id">Details</a> 
                <a asp-action="Delete" class="btn btn-primary" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
