@model IEnumerable<Rental4You.Models.Gestor>

@{
    ViewData["Title"] = "Gestores";
    Layout = "~/Views/Shared/_Layout_2.cshtml";
}

<h1>Gestores</h1>

<p>
    <a class="btn-primary btn" asp-action="Create">Adicionar Gestor</a>
</p>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empresa)
            </th>
            <th>
                Ativo
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td >
                @Html.DisplayFor(modelItem => item.Empresa.Nome)
            </td>
            <td class="col-lg-1">
                <input type="checkbox" checked="@item.ApplicationUser.Ativo" onclick="return false;" />
            </td>
        </tr>
        }
    </tbody>
</table>
