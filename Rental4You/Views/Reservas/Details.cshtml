@model Rental4You.Models.Reserva

@{
    ViewData["Title"] = "Detalhes da Reserva";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalhes</h1>

<div>
    <h4>Reserva</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Veiculo)
        </dt>
        <dd class = "col-sm-10">
            @Model.Veiculo.Marca <small>@Model.Veiculo.Modelo</small>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.KilometrosInicio) 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.KilometrosInicio) 
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.KilometrosFim)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.KilometrosFim)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class = "col-sm-10">
            @if(Model.Estado == true)
            {
                <span>Confirmado</span>
            } else {
                if(Model.Confirmado == true) {
                    <span>Rejeitado</span>
                } else {
                    <span>Aguarda Confirmação</span>
                }
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataInicio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataInicio)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataFim)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataFim)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cliente.ApplicationUser.UserName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FuncionarioEntrega)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FuncionarioEntrega.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FuncionarioRecebe)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FuncionarioRecebe.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ObservacoesInicio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ObservacoesInicio)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ObservacoesFim)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ObservacoesFim)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dd class="col-sm-10">
            @if (ViewBag.images != null)
            {
                int i = 0;        
                foreach(var item in ViewBag.images){
                    <img src="@item" width="300" height="300"/>
                    i++;
                }
                if(i == 0) {
                    <p class="alert alert-success">
                        Não houve danos no carro nesta reserva.
                    </p>
                } else 
                {
                    <p class="alert alert-danger">
                        O carro sofreu danos nesta reserva.
                    </p>
                }
            }
        </dd>
    </dl>
</div>
<div>
    <a class="btn-primary btn" asp-action="ReservasCliente">Voltar às reservas</a>
</div>
