
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Rental4You</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Rental4You.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-black bg-opacity-75 border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Rental<span class="text-success">4You</span></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacidade</a>
                        </li>
                        @if(User.IsInRole("Cliente")) {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Reservas" asp-action="ReservasCliente">Reservas</a>
                            </li>
                        }
                        @if (User.IsInRole("Funcionario")) { 
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="Index" asp-controller="Veiculos" asp-action="">Veículos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="Index" asp-controller="Reservas" asp-action="">Reservas</a>
                            </li>
                        }
                        @if (User.IsInRole("Gestor"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="Index" asp-controller="Veiculos" asp-action="">Veículos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="Index" asp-controller="Reservas" asp-action="">Reservas</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="Index" asp-controller="Funcionarios" asp-action="">Funcionários</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="Index" asp-controller="Gestores" asp-action="">Gestores</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Dashboards" asp-action="GestorBoard">Dashboard</a>
                            </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="Index" asp-controller="Categorias" asp-action="">Categorias</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="Index" asp-controller="Empresas" asp-action="">Empresas</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="Index" asp-controller="ApplicationUsers" asp-action="">Utilizadores</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Dashboards" asp-action="AdminBoard">Dashboard</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Rental4You - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
