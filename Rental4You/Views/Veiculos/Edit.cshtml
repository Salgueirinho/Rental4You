                <label asp-for="EmpresaId" class="control-label" hidden></label>
                <select asp-for="EmpresaId" class="form-control" asp-items="ViewBag.EmpresaId" hidden></select>
                <span asp-validation-for="EmpresaId" class="text-danger" hidden></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
