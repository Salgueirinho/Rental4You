@model Rental4You.ViewModels.PesquisaVeiculosViewModel

@{
    ViewData["Title"] = "Veículos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="" style="background-image: url(@Url.Content("~/images/hero_1.jpg"));min-height: 20rem;">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-lg-10">

                <div class="row mb-5">
                    <div class="col-lg-7 intro">
                        <h1><strong>Alugar um carro</strong> nunca foi tão fácil</h1>
                    </div>
                </div>

                <form class="trip-form" method="post" asp-controller="Veiculos" asp-action="Search">

                    <div class="row align-items-center">

                        <div class="mb-3 mb-md-0 col-md-2">
                            <label asp-for="Localizacao" class="control-label"></label>
                            <select asp-for="Localizacao" class="form-control" asp-items="ViewBag.Localizacoes"></select>
                        </div>
                        <div class="mb-3 mb-md-0 col-md-2">
                            <label asp-for="CategoriaId" class="control-label">Tipo de Categoria</label>
                            <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
                        </div>
                        <div class="mb-3 mb-md-0 col-md-2">
                            <label class="control-label">Empresa</label>
                            <select name="EmpresaId" class="form-control" asp-items="ViewBag.EmpresaId"></select>
                        </div>
                        <div class="mb-3 mb-md-0 col-md-3">
                            <div class="form-control-wrap">
                                <label asp-for="DataLevantamento" class="control-label"></label>
                                <input asp-for="DataLevantamento" type="date" id="start-date" class="form-control" min="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                                <span asp-validation-for="DataLevantamento" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3 mb-md-0 col-md-2">
                            <div class="form-control-wrap">
                                <label asp-for="DataEntrega" class="control-label"></label>
                                <input asp-for="DataEntrega" type="date" id="end-date" class="form-control" min="#start-date" required />
                                <span asp-validation-for="DataEntrega" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3 mb-md-0 col-md-3 mt-3">
                            <input type="submit" class="btn btn-primary btn-block py-3" value="Pesquisar" />
                        </div>
                        <div class="mb-3 mb-md-0">
                            <div class="form-control-wrap">
                                <label>Ordenar por:</label>
                                <div class="form-check form-check-inline">
                                    <input asp-route-sort="Pmais" class="form-check-input" type="radio" name="sortBy" value="Pmais">
                                    <label class="form-check-label" for="Pmais">Preço mais alto</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input asp-route-sort="Pmenos" class="form-check-input" type="radio" name="sortBy" value="Pmenos">
                                    <label class="form-check-label" for="Pmenos">Preço mais baixo</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input asp-route-sort="Rmais" class="form-check-input" type="radio" name="sortBy" value="Rmais">
                                    <label class="form-check-label" for="Rmais">Rating mais alto</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input asp-route-sort="Rmenos" class="form-check-input" type="radio" name="sortBy" value="Rmenos">
                                    <label class="form-check-label" for="Rmenos">Rating mais baixo</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById("start-date").addEventListener("change", function () {
        var startDate = this.value;

        document.getElementById("end-date").setAttribute("min", startDate);
    });
</script>

@if (Model.NumResultados == 0)
{
    <p class="alert alert-warning">
        Não foi possível
        encontrar veiculos com os dados introduzidos.
        Por favor, reveja a sua pesquisa
    </p>
}
else
{
    <p class="alert alert-success">Existe(m) @Model.NumResultados Veiculos(s) disponiveis</p>
    <h1 class="">Veículos</h1>
}


<div class="row px-3">
    @{

        if (Model.ListaVeiculos != null)
        {
            foreach (var item in Model.ListaVeiculos)
            {
                <div class="col-md-6 col-lg-4 mb-3">
                    <div class="card justify-content-center text-center">
                        <div class="img-square-wrapper">
                            <img class="card-img" src="@String.Format("https://cdn.imagin.studio/getImage?customer=copyright-imaginstudio&make={0}&modelFamily={1}&paintId=pspc0003&angle=20&width=2600&zoomType=fullscreen", @item.Marca, item.Modelo)" />
                        </div>
                        <div class="card-body">
                            <div class="card-header">
                                @item.Marca <small>@item.Modelo</small>
                            </div>
                            <div class="">
                                Categoria: @item.Categoria.Nome
                            </div>
                            <div class="">
                                Lugares: @item.NumeroLugares lugares
                            </div>
                            Caixa: 
                            @if (item.Caixa)
                            {
                                <div>Manual</div>
                            }
                            else
                            {
                                <div>Automático</div>
                            }
                            <div>
                               Preço: @item.Custo €/dia
                            </div>
                            <div>
                               Empresa: @item.Empresa.Nome
                            </div>
                            <div>
                               Localização: @item.Localizacao
                            </div>
                        </div>
                        <div class="card-footer">
                            <a asp-controller="Reservas" asp-action="Create" asp-route-id="@item.Id"
            asp-route-data_levantamento="@Model.DataLevantamento.ToString()" asp-route-data_entrega="@Model.DataEntrega.ToString()"
            class="w-100 btn btn-lg btn-outline-primary">Reservar</a>
                        </div>
                    </div>
                </div>
            }
        }

    }
</div>


